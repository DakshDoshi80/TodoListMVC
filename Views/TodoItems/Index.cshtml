@model IEnumerable<TodoListMVC.Models.TodoItem>
@{
    ViewData["Title"] = "To-Do List";
}

<div class="text-center mt-3">
    <h2>To-Do List Project</h2>
    <h6 class="text-muted">Created by Daksh Doshi (Enrollment No: 202403103520033)</h6>
</div>

<div class="mb-3 mt-4">
    <a class="btn btn-primary" asp-action="Create">+ Create New Task</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created</th>
            <th>Completed</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>
                <form asp-action="ToggleComplete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button class="btn btn-sm @(item.IsCompleted ? "btn-success" : "btn-outline-secondary")" type="submit">
                        @(item.IsCompleted ? "Completed" : "Mark")
                    </button>
                </form>
            </td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
